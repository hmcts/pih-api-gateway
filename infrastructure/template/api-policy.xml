            <audiences>
                <audience>api://d911c998-07c1-489a-9d8e-d44678458f26</audience>
            </audiences>
            <issuers>
                <issuer>https://sts.windows.net/4cdea387-4a31-46b1-b99a-c9e41aa989a3/</issuer>
            </issuers>
            <required-claims>
                <claim name="roles" match="all">
